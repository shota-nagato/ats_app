<div class="flex flex-col justify-center mt-12">
  <h2 class="text-center text-3xl font-extrabold text-gray-900">
    Sign in for ATS App
  </h2>
  <p class="mt-2 text-center text-sm text-gray-600">
    Need an account?
    <%= link_to "Sign up for free", new_user_registration_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
  </p>
  <div class="bg-white mt-8 mx-auto w-full max-w-lg p-8 shadow rounded-lg">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password %>
      </div>

      <%= form.button t(".sign_in"), class: "btn btn-primary w-full" %>
    <% end %>
  </div>
</div>
