<div class="flex flex-col justify-center mt-12">
  <h2 class="text-center text-3xl font-extrabold text-gray-900">
    Sign up for ATS App
  </h2>
  <p class="mt-2 text-center text-sm text-gray-600 max-w">
    すでにアカウントをお持ちですか？
    <%= link_to "ログインする", new_user_session_path, class: "font-medium text-blue-600 hover:text-blue-800" %>
  </p>
  <div class="bg-white mt-8 mx-auto w-full max-w-lg p-8 shadow rounded-lg">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |form| %>
      <%= form.fields_for :account do |account_fields| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= account_fields.label :name %>
          <%= account_fields.text_field :name, autofocus: true %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.email_field :email, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, autocomplete: "new-password" %>
          <p class="text-xs text-gray-500 mt-1 text-right">at least 6 characters</p>
        </div>

        <div class="form-group">
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <%= form.button t(".sign_up"), class: "btn btn-primary w-full" %>
      <% end %>
    <% end %>
  </div>
</div>
